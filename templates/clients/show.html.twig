{% extends 'base.html.twig' %}

{% block title %}Clients{% endblock %}

{% block body %}
<div class="container">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <i class="icon_menu"> Detail Client</i>
        </div>
        <div class="panel-body">

    <table class="table">
        <tbody>
            <tr>
                <th>Nom du client</th>
                <td>{{ client.nomcli }}</td>
            </tr>
            <tr>
                <th>Rue</th>
                <td>{{ client.ruecli }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ client.villecli }}</td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ client.codepostalcli }}</td>
            </tr>
            <tr>
                <th>Contact</th>
                <td>{{ client.contactcli }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ client.telephonecli }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ client.mailcli }}</td>
            </tr>
            <tr>
                <th>Site web</th>
                <td>{{ client.sitewebcli }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('clients_index') }}">Retourner</a>

    <a href="{{ path('clients_edit', {'id': client.id}) }}">Modifier</a>

    {{ include('clients/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
